<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.coffeedose.viewmodels.DrinksViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/drinkPhoto"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/spacing_normal_16"
            android:layout_height="240dp"/>


        <Spinner
            android:id="@+id/drinksSpinner"
            android:layout_below="@id/drinkPhoto"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:onItemSelected="@{(newIndex) -> viewModel.onSelectedItemIndexChanged(newIndex)}"
            app:drinks="@{viewModel.drinks}"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drinkDescription"
            android:layout_below="@id/drinksSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal_16"
            android:gravity="left"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceedButton"
            android:layout_width="200dp"
            android:text="@string/DoProceed"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacing_normal_16"/>

    </RelativeLayout>

</layout>