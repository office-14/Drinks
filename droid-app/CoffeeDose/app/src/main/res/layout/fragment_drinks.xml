<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.office14.coffeedose.viewmodels.DrinksViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/drinks_root_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/drinkPhoto"
                    android:padding="@dimen/zero_padding"
                    android:background="@drawable/bg_round_border"
                    style="@style/Base.TextView"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/spacing_normal_16"
                    android:layout_height="240dp"/>


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/drinksSpinner"
                    android:layout_below="@id/drinkPhoto"
                    android:background="@drawable/bg_spinner_dropdown"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_marginTop="@dimen/spacing_normal_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/drinkDescription"
                    android:background="@drawable/bg_round_border"
                    android:padding="@dimen/spacing_small_8"
                    style="@style/Base.TextView"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@id/drinksSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_normal_16"
                    android:gravity="left"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/proceedButton"
                    android:layout_width="200dp"
                    android:text="@string/DoProceed"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/default_button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/spacing_normal_16"/>

            </RelativeLayout>


               <LinearLayout
                    android:id="@+id/view_error_drinks"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_error_drinks"
                        android:src="@drawable/ic_error_outline_black_24dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_error_text_drinks"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_normal_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
               </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</layout>