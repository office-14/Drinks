<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_size_name"
        style="@style/Base.TextView"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tv_size_price"
        android:layout_margin="@dimen/spacing_small_8"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Medium."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_size_price"
        style="@style/Base.TextView.Single"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:layout_marginRight="@dimen/spacing_small_8"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="140 P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>